{
  "name": "enthalpy",
  "version": "1.0.1",
  "description": "React UI kit for Portfolios",
  "author": "lklsquare",
  "license": "MIT",
  "repository": "lklsquare/enthalpy",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "lint": "eslint src/**/**/**/*.ts src/**/**/**/*.tsx .",
    "lint:fix": "exlint --fix",
    "format": "prettier --write **/*.{ts,tsx} **/**/*.{ts,tsx} **/**/**/*.{ts,tsx}",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "lint-staged": {
    "./src/components/Atoms/**/*@(ts|tsx)": [
      "npm --cwd src/Atoms run lint",
      "npm --cwd src/Atoms run lint:fix",
      "npm --cwd src/Atoms run format"
    ],
    "./src/components/Molecules/**/*@(ts|tsx)": [
      "npm --cwd src/Molecules run lint",
      "npm --cwd src/Molecules run lint:fix",
      "npm --cwd src/Molecules run format"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "classnames": "^2.3.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "husky": "^6.0.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-docgen-typescript": "^1.22.0",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "react-styleguidist": "^11.1.6",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-regular-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@material-ui/core": "^4.12.1",
    "@material-ui/icons": "^4.11.2",
    "react-router-dom": "^5.2.0"
  }
}
